<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="8dp"
        android:padding="15dp"
        android:background="@color/white">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:orientation="horizontal">

                <TextView
                    android:id="@+id/expNameView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exp. Name  "
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:padding="10dp"
                    android:layout_marginStart="10dp"
                    android:textSize="14sp"
                    />


                <TextView
                    android:id="@+id/expDateView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Time "
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:padding="10dp"
                    android:layout_marginStart="110dp"
                    android:textSize="14sp"
                    />



            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/expCatView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exp. Category "
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:padding="10dp"
                    android:layout_marginStart="10dp"
                    android:textSize="14sp"
                    />

                <TextView
                    android:id="@+id/expAmountView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exp. Amount "
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:padding="10dp"
                    android:layout_marginStart="100dp"
                    android:textSize="14sp"
                    />





            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/expPayModeView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment Mode  "
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:padding="10dp"
                    android:layout_marginStart="10dp"
                    android:textSize="14sp"
                    />


                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:layout_marginStart="80dp"
                    android:src="@drawable/pin">

                </ImageView>

                <TextView
                    android:id="@+id/expPlaceView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Place "
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:padding="10dp"
                    android:layout_marginStart="10dp"
                    android:textSize="14sp"
                    />



            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textAlignment="center"
                android:textStyle="italic"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="5dp"
                android:text="Money has been added to Everyoneâ€™s Id  Equally">

            </TextView>
        </LinearLayout>
        
    </androidx.cardview.widget.CardView>

</RelativeLayout>